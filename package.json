{
  "name": "@robb_j/static-page",
  "private": true,
  "version": "0.0.0",
  "description": "Generate a html page from markdown and serve it over http with docker",
  "main": "src/index.js",
  "repository": "robb-j/node-base",
  "author": "Rob Anderson (https://r0b.io)",
  "license": "MIT",
  "scripts": {
    "coverage": "jest --coverage",
    "lint": "eslint src",
    "postversion": "node tools/buildAndPush.js",
    "prettier": "prettier --write '**/*.{js,json,css,md}'",
    "start": "node src/server.js",
    "test": "jest",
    "dev": "NODE_ENV=development nodemon -x 'node -r dotenv/config' --watch src src/server.js",
    "gen-readme-toc": "npx @robb_j/md-toc -i"
  },
  "keywords": [],
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@robb_j/md-toc": "^0.2.2",
    "bulma": "^0.7.4",
    "dotenv": "^6.2.0",
    "format-ms": "^1.2.1",
    "hastscript": "^5.0.0",
    "rehype-document": "^3.0.0",
    "rehype-stringify": "^5.0.0",
    "remark-frontmatter": "^1.3.1",
    "remark-parse": "^6.0.3",
    "remark-rehype": "^4.0.0",
    "remark-toc": "^5.1.1",
    "sass": "^1.17.2",
    "to-vfile": "^5.0.2",
    "unified": "^7.1.0",
    "yaml": "^1.3.2"
  },
  "devDependencies": {
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,less,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js}": [
      "eslint",
      "git add"
    ]
  }
}
