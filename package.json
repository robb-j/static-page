{
  "name": "@robb_j/static-page",
  "private": true,
  "version": "1.2.0",
  "description": "Generate a html page from markdown and serve it over http with docker",
  "main": "src/index.js",
  "repository": "robb-j/node-base",
  "author": "Rob Anderson (https://r0b.io)",
  "license": "MIT",
  "scripts": {
    "coverage": "jest --coverage",
    "lint": "eslint src",
    "postversion": "node tools/buildAndPush.js",
    "prettier": "prettier --write '**/*.{js,json,css,md}'",
    "start": "node src/server.js",
    "test": "jest",
    "dev": "NODE_ENV=development nodemon -x 'node -r dotenv/config' --watch src src/server.js",
    "gen-readme-toc": "npx @robb_j/md-toc -i"
  },
  "keywords": [],
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@robb_j/md-toc": "^0.3.1",
    "bulma": "^0.9.1",
    "dotenv": "^8.2.0",
    "format-ms": "^1.2.1",
    "hastscript": "^5.0.0",
    "rehype-document": "^3.0.0",
    "rehype-stringify": "^5.0.0",
    "remark-frontmatter": "^1.3.1",
    "remark-parse": "^6.0.3",
    "remark-rehype": "^4.0.0",
    "remark-toc": "^5.1.1",
    "sass": "^1.27.0",
    "to-vfile": "^5.0.2",
    "unified": "^7.1.0",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "eslint": "^7.12.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-config-standard": "^15.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.4.2",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,less,md}": [
      "prettier --write"
    ],
    "*.{js}": [
      "eslint"
    ]
  }
}
